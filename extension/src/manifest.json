{
    "name": "Were you here?",
    "version": "0.1.0",
    "description": "Indicates whether and when the page was visited (and more!)",
    "web_accessible_resources": ["sidebar.js"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
"options_ui": {
    "page": "options_page.html",
    "chrome_style": true
  },
    "permissions": [
        "https://*/*",
        "http://*/*",

        "file:///*",
        "tabs",
        "storage",
        "history"
    ],
    "icons": {
        "48": "images/ic_not_visited_48.png"
    },
    "browser_action": {
        "default_icon": "images/ic_not_visited_48.png",
        "default_title": "Was not visited"
    },
    "manifest_version": 2
}
