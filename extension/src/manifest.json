{
    "name": "Were you here?",
    "version": "0.4.0",
    "description": "Indicates whether and when the page was visited (and more!)",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
"options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
    "permissions": [
        "file:///*",
        "tabs",
        "storage",
        "history"
    ],
    "icons": {
        "48": "images/ic_not_visited_48.png"
    },
    "browser_action": {
        "default_icon": "images/ic_not_visited_48.png",
        "default_title": "Was not visited",
        "default_popup": "popup.html"

    },
    "manifest_version": 2
}
